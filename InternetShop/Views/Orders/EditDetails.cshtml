@model IList<InternetShop.Data.Models.OrderDetail>

@{
    ViewData["Title"] = "Edit Details";
}

<h1>How many products do you want to order?</h1>

<h4>Your Order</h4>
<h5>Please enter numbers for products.</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div style="margin-top:2%;">
                    <p>@Model[i].Product.Name</p>
                    <div>@Html.TextBoxFor(m => Model[i].Units, new { Class="form-control", Style="margin:2%;"})</div>
                    @Html.HiddenFor(m => Model[i].ProductId)
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>